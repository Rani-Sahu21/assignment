#include<iostream>
using namespace std;
int main(){
    int a[100],n;
    cout<<"enter the number"<<endl;
    cin>>n;
    cout<<"enter the numbers"<<endl;
    for(int i=0;i<n;i++){
        cin>>a[i];
    }
    int sum1=0;
    for(int i=0;i<n;i++){
        if(a[i]%2==0){
            sum1+=a[i];
        }
    }

    int sum2=0;
      for(int i=0;i<n;i++){
        if(a[i]%2==1){
            sum2+=a[i];
        }
    }

    cout<<"sum of even numbers:"<<sum1<<endl;
    cout<<"sum of odd numbers:"<<sum2<<endl;



    return 0;
}
